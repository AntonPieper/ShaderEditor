<!-- Use a ScrollView around EditText to have a padding around the text
	contents. If we make EditText scrollable, contents will be cut off
	at the specified padding but before the visible border. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/scroll_view"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_editor"
	android:fillViewport="true">
	<!-- Hardcode gravity to left because GLSL source code is always
		aligned to the left. -->
	<HorizontalScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:fillViewport="true"
		android:scrollbars="none">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:orientation="horizontal">

			<LinearLayout
				android:id="@+id/line_numbers_container"
				android:layout_width="wrap_content"
				android:layout_height="match_parent">

				<de.markusfisch.android.shadereditor.widget.LineNumbers
					android:id="@+id/line_numbers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="@dimen/editor_padding"
					android:textColor="@color/editor_text"
					android:textSize="12sp"
					android:typeface="monospace"
					app:fontFamily="@font/jetbrains_mono" />

				<View
					android:layout_width="1dp"
					android:layout_height="match_parent"
					android:background="@color/editor_text" />
			</LinearLayout>

			<FrameLayout
				android:id="@+id/editor_container"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<!-- Behind the syntax editor, because it lags otherwise -->
				<de.markusfisch.android.shadereditor.widget.ShaderEditor
					android:id="@+id/editor"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:autofillHints=""
					android:background="@android:color/transparent"
					android:gravity="left|top"
					android:hint="@string/editor_hint"
					android:imeOptions="flagNoExtractUi"
					android:inputType="textMultiLine|textNoSuggestions"
					android:padding="@dimen/editor_padding"
					android:textColor="@color/editor_text"
					android:textSize="12sp"
					android:typeface="monospace"
					app:fontFamily="@font/jetbrains_mono"
					tools:ignore="RtlHardcoded" />

				<de.markusfisch.android.shadereditor.widget.SyntaxView
					android:id="@+id/syntax"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</FrameLayout>
		</LinearLayout>
	</HorizontalScrollView>
</ScrollView>
